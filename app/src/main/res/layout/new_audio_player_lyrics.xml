<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_title_lyrics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:textColor="@color/black"
        android:textSize="24.0dip" />

    <TextView
        android:id="@+id/artist_lyrics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43.0dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:textSize="16.0dip" />




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="72.0dip">

        <TextView
            android:id="@+id/new_lyrics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4.0dip"
            android:padding="16.0dip"
            android:textColor="@color/black"
            android:textSize="15.0dip" />
    </ScrollView>
</FrameLayout>