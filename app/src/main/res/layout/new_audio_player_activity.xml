<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_player"
    android:background="@color/md_white_1000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/mike_gradient"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">


        <LinearLayout
            android:id="@+id/shadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="?attr/actionBarSize"
            android:background="@color/colorGray"
            android:orientation="vertical" />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/AudioPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_marginTop="35dp">


        </androidx.viewpager.widget.ViewPager>

        <ImageButton
            android:id="@+id/new_shuffle"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="@null"
            android:src="@drawable/ic_shuffle_24"
            android:tint="@color/colorGray" />

        <ImageButton
            android:id="@+id/new_repeat"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom|center|right"
            android:background="@null"
            android:src="@drawable/ic_repeat_24"
            android:tint="@color/colorGray" />

        <LinearLayout
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="24.0dip"
            android:animateLayoutChanges="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="6.0dip"
                android:layout_height="6.0dip"
                android:layout_marginRight="8.0dip"
                android:src="@drawable/music_ic_dot"
                android:tint="@color/colorGray" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="6.0dip"
                android:layout_height="6.0dip"
                android:layout_marginRight="7.0dip"
                android:src="@drawable/music_ic_dot"
                android:tint="@color/colorGray" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="9.0dip"
                android:layout_height="8.0dip"
                android:src="@drawable/ic_playlist_dot_10"
                android:tint="@color/colorGray" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/close_ap_act"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:src="@drawable/ic_hide_16"
                android:tint="@color/colorGray">


            </ImageView>
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
